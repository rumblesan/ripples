{
  "name": "3js-starter",
  "version": "0.1.0",
  "description": "A three.js experiment",
  "main": "src/main.js",
  "author": "Guy John",
  "license": "BSD-3",
  "scripts": {
    "prebuild": "rm -rf ./dist/*",
    "build": "cp -r ./html/* ./dist/; cp ./style/* ./dist/; browserify . > ./dist/app.js",
    "clean": "rm -rf ./dist/*",
    "test": "echo \"Error: no test specified\" && exit 1",
    "serve": "http-server ./dist"
  },
  "devDependencies": {
    "browserify": "^9.0.6",
    "http-server": "^0.8.0",
    "reactify": "^1.1.0"
  },
  "browserify": {
    "transform": [
      [
        "reactify",
        {
          "strip-types": true
        }
      ]
    ]
  }
}
