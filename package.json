{
  "name": "sound-wall",
  "version": "0.1.0",
  "description": "A three.js experiment",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "http://github.com/rumblesan/soundwall.git"
  },
  "author": "Guy John",
  "license": "BSD-3",
  "scripts": {
    "prebuild": "rm -rf ./dist/*",
    "build": "browserify . -o ./dist/app.js",
    "watch": "watchify . -o ./dist/app.js",
    "postbuild": "cp -r ./statics/* ./dist/; cp -r ./html/* ./dist/; cat ./style/*.css > ./dist/style.css;",
    "clean": "rm -rf ./dist/*",
    "serve": "http-server ./dist"
  },
  "devDependencies": {
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "http-server": "^0.8.0",
    "watchify": "^3.7.0"
  },
  "dependencies": {
    "teoria": "^1.12.0",
    "tone": "^0.7.1",
    "underscore": "^1.8.3"
  },
  "browserify": {
    "transform": [
        ["babelify", {"presets": ["es2015"]}]
    ]
  }
}
